        },
        "evidence": {
          "type": "string",
          "required": false,
          "description": "Evidence or proof"
        }
      },
      "json_prompt_template": "{\"tool\": \"db_add_finding\", \"args\": {\"type\": \"<TYPE>\", \"url\": \"<URL>\", \"severity\": \"<SEVERITY>\", \"description\": \"<DESCRIPTION>\", \"evidence\": \"<EVIDENCE>\"}}"
    },
